FROM python:3.11-slim

WORKDIR /app

# Copy frontend requirements
COPY frontend/requirements-streamlit.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements-streamlit.txt

# Copy frontend code
COPY frontend/ .

# Expose port
EXPOSE 8507

# Run streamlit
CMD ["streamlit", "run", "streamlit_app.py", "--server.port=8507", "--server.address=0.0.0.0"]
